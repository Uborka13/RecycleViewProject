<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#2E4A62"
    tools:context="test.soft.ubi.recycleviewproject.activities.MainActivity">

    <Button
        android:id="@+id/list_from_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Animated list from top"/>
    <Button
        android:id="@+id/list_from_right"
        android:layout_below="@id/list_from_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Animated list from right"/>
    <Button
        android:id="@+id/list_from_bottom"
        android:layout_below="@id/list_from_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Animated list from bottom"/>

    <FrameLayout
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:transitionName="simple_fragment_transition"
        android:layout_height="match_parent" />

</RelativeLayout>
